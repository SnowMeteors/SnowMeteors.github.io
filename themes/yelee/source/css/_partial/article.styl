.article-meta{
  position: absolute;
  right: 0;
  top: 23px;
  width: 8rem;
  font-size: (14/16)rem;
  text-align: center;
  z-index: 1;
  time {
    color: #aaa;
    &:before {
      margin-top: 0;
      margin-right: 4px;
      content: "\f073";
      font: 1em FontAwesome;
      color: #999;
    }
  }
}

.article-more-link {
  float: right;
  margin-top: 5px;
  a {
    padding: 2px 4px;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    border-radius: 2px;
    background: #88acdb;
    color: #fff;
    font-size: .9rem;
    line-height: 1em;
    white-space: nowrap;
    transition: background 0.3s;
    opacity: i-opacity;
    &:hover {
      background: hover-color;
      opacity: 1;
    }
    &.hidden {
      visibility: hidden;
    }
  }
  &:hover {
    transform: scale(1.06);
  }
}

#article-nav {
  display: table;
  width: 100%;
  height: 2.5em;
  margin: 1em auto;
  font-size 1rem
  background: rgba(158, 188, 226, i-opacity);
  &:hover {
    background: #93b5e0;
  }
}

.article-nav-title {
  display: table-cell;
  vertical-align: middle;
  a {
    color: white;
  }
  a:hover {
    font-style: italic;
  }
}

#article-nav-older {
  padding-right: 1em;
  text-align: right;
  &::after {
    padding-left:0.5em;
    content:"→";
    color: white;
    font-weight: bold;
    font-family: Calibri;
  }
}

#article-nav-newer {
  padding-left: 1em;
  text-align: left;
  &::before {
    padding-right:0.5em;
    content:"←";
    color: white;
    font-weight: bold;
    font-family: Calibri;
  }
}

#intro {
  display: inline;
  font-weight: normal;
  font-size: inherit;
  opacity: 0;
  color: white;
  &::before, &::after {
    content: none;
  }
}

li:hover {
  background: rgba(158, 188, 226, .21);
}
.article-entry > ol:last-child {
  > li:nth-child(2n) {
    background: rgba(158, 188, 226, .12);
  }
li {
  word-break: break-all;
}
li:hover {
  background: #F0F0F0;
}
}

